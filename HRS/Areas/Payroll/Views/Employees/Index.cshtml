@using HRS.Models
@{
    List<Employee> employees = Model.employeelist;
}


<div class="row">

    <!-- /.col-md-6 -->
    <div class="col-lg-12">
        <div class="clearfix m-2"></div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title pt-2 ">Employees</h3>
                <div class="card-tools">
                    <a href="/Payroll/employees/Edit" class="btn btn-primary ">edit</a>
                </div>
            </div>
            <div class="card-body">

                <table id="dlist" class=" table table-striped table-bordered table-hover table-condensed ">
                    <thead>
                        <tr>
                            <th>emp_id</th>
                            <th>emp_name</th>
                            <th>email</th>
                            <th>phone_no</th>
                            <th class="col-1"> </th>
                            <th class="col-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in employees)
                        {
                            <tr>
                                <th>@item.EmpId</th>
                                <td>@item.EmpName</td>
                                <td>@item.EmpEmail</td>
                                <td>@item.EmpNo</td>
                                <td>
                                    <a href="/Payroll/employees/Edit/@item.EmpId" class="btn btn-default btn-block "><i class="fa fa-edit"></i> ></a>

                                </td>
                                <td>
                                    <a href="javascript:void(0)" class="btn btn-danger btn-block "><i class="fa fa-times"></i> ></a>
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>



            </div>
        </div>


    </div>
    <!-- /.col-md-6 -->
</div>
@section scripts{ 

    <script>
        $(function () {
            $('#dlist').DataTable();
        });
    </script>

}